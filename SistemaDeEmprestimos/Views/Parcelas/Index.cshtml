@model IEnumerable<SistemaDeEmprestimos.Models.Parcela>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Emprestimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorParcela)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroParcela)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pago)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Emprestimo.EmprestimoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorParcela)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroParcela)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pago)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ParcelaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ParcelaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ParcelaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
